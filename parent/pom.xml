  <description>
    Parent pom, defines dependency management and plugin management for all PROVYS projects
  </description>
  <packaging>pom</packaging>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- set to true if you want to run integration tests -->
    <skip.integration.tests>false</skip.integration.tests>
    <!-- set to generate-test-sources if you want to run integration tests-->
    <it.generate.test.sources.phase>none</it.generate.test.sources.phase>
    <!-- set to generate-test-resources if you want to run integration tests-->
    <it.generate.test.resources.phase>none</it.generate.test.resources.phase>
    <!-- set to verify if you want to produce Cucumber test reports -->
    <cucumber.generate.report.phase>none</cucumber.generate.report.phase>
  </properties>
  <!-- To allow integration tests, use following construct; it will include integration sources and
  resources in compilation and enable failsafe plugin
  <profiles>
    <profile>
      <id>include-integration-test</id>
      <properties>
        <skip.integration.tests>false</skip.integration.tests>
        <it.generate.test.sources.phase>generate-test-sources</it.generate.test.sources.phase>
        <it.generate.test.resources.phase>generate-test-resources</it.generate.test.resources.phase>
      </properties>
    </profile>
  </profiles>
  -->
